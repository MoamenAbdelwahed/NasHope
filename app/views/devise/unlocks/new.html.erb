
<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, :class=>"dialog-form", url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true , :class=>"form-control"%></div>

  <div><%= f.submit "Resend unlock instructions" %></div>
    <div><input type="submit" value="Resend unlock instructions" class="btn btn-primary"></div>

<% end %>

