<h2>Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name) , :class=>"dialog-form", html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true , :class=>"form-control"%></div>

   <div><input type="submit" value="Resend confirmation instructions" class="btn btn-primary"></div>

<% end %>

<%= render "devise/shared/links" %>
