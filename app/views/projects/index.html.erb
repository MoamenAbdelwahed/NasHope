<h1>Listing projects</h1>

<table>
  <thead>
    <tr>
      <th>Project name</th>
      <th>Project description</th>
      <th>Project photo</th>
      <th>Project social state</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.project_name %></td>
        <td><%= project.project_description %></td>
        <td><%=  image_tag project.project_photo %></td>
        <td><%= project.project_social_state %></td>
        <td><a href="projects/show/<%= project.id%>">Show</a></td>
        <td>
          <% if current_user %>
          <% if current_user.id == project.id %>
          <a href="projects/edit/<%= project.id%>">Edit</a></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
<%= link_to 'New Project', new_project_path %>
<% end %>
