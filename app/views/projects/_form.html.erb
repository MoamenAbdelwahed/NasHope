
<%= form_for @project , :url => projects_path , :html => { :multipart => true } do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <form role="form">
    <% @project.user_id = current_user.id %>
    <% if current_user.ngo %>
    <% @project.ngo_id = current_user.ngo.id%>
    <% end %>
    <div class="form-group">
      <label for="project_name"><strong>Project name</strong></label>
      <input id="project_name" name="project[project_name]" type="text" class="form-control" placeholder="ex: ahmed hassan">
    </div>
    <div class="form-group">
      <label for="project_description"><strong>Description</strong></label>
      <textarea id="project_description" name="project[project_description]" class="form-control" rows="3"></textarea>
    </div>
    <div class="form-group">
      <label for="project_photo"><strong>Profile photo</strong></label>
      <input type="file" id="project_photo" name="project[project_photo]">
    </div>
    <div class="form-group">
      <label for="project_social_state"><strong>Social state</strong></label>
      <input type="file" id="project_photo" name="project[project_social_state]">
      <p>attach a photo of your documentation</p>
    </div>
    <p><input type="submit" class="btn btn-primary"/></p>
  </form>
<% end %>
