<h1>Listing products</h1>

<br>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <div class="col-md-3" >
          <div class="product-thumb">
            <header class="product-header">
              <%= image_tag("800x600.png")%>
            </header>
            <div class="product-inner">
              <h5 class="product-title"><%= product.name %></h5>
              <h5 class="product-category"><%= product.category %></h5>
              <p class="product-desciption"><%= product.details %></p>
              <a class="product-price" href="products/<%= product.id%>/edit">Edit</a>
              <a class="product-price" href="products/<%= product.id%>">Show</a>
              
              <a data-confirm="Are you sure?" data-method="delete" href="products/destroy/<%= product.id%>" rel="nofollow">Destroy</a>
              <a data-confirm="Are you sure?" data-method="delete" href="/products/<%= product.id%>" rel="nofollow">Destroy</a>
            </div>
          </div>
        </div>    
      </tr>
    <% end %>
  <tbody>
